# DANA AI Reasoning Demo
# Demonstrates: reason function, LLM integration, intelligent analysis

def analyze_sentiment(text: str) -> str:
    prompt = f"Analyze the sentiment of this text: '{text}'. Respond with just: positive, negative, or neutral"
    return reason(prompt)

def intelligent_recommendation(user_data: dict) -> dict:
    context = f"User profile: {user_data}"
    analysis = reason(f"Based on this user data: {context}, what are 3 personalized recommendations?")
    
    confidence = reason(f"On a scale of 1-10, how confident are you in these recommendations for this user profile: {user_data}?")
    
    return {
        "recommendations": analysis,
        "confidence_score": confidence,
        "user_profile": user_data
    }

# Export AI functions
export analyze_sentiment
export intelligent_recommendation