import "common.na"
import "agent.na"
import "methods.na"

def quick_answer(agent: RIEAgent, q: Question) -> Answer:
    return gather_context(agent, q) as ctx | craft_fact_reply(agent, q, ctx)

def full_diagnose(agent: RIEAgent, q: Question) -> Answer:
    return build_case_context(agent, q) as case
        | generate_plan(agent, case) as plan
        | execute(agent, plan, case)
        | summarise_outcome(agent, case) 