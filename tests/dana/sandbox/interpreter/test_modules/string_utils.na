# string_utils.na - String utility functions for testing

def to_upper(text: str) -> str:
    return text.upper()

def to_lower(text: str) -> str:
    return text.lower()

def reverse_string(text: str) -> str:
    # Use Python string slicing to reverse the string
    return text[::-1]

def word_count(text: str) -> int:
    if not text:
        return 0
    return len(text.split())

# Exported constant
public:DEFAULT_SEPARATOR = " "

# Function with multiple parameters
def join_words(words: list, separator: str = public:DEFAULT_SEPARATOR) -> str:
    sep = separator
    return sep.join(words) 