# text.na - Text processing utilities submodule

def capitalize_words(text: str) -> str:
    words = text.split()
    capitalized = []
    for word in words:
        cap_word = word.capitalize()
        capitalized.append(cap_word)
    separator = " "
    return separator.join(capitalized)

def title_case(text: str) -> str:
    return text.title()

def clean_whitespace(text: str) -> str:
    separator = " "
    return separator.join(text.split())

def truncate(text: str, max_length: int) -> str:
    if len(text) <= max_length:
        return text
    # Simple truncation without slice syntax
    result = ""
    target_length = max_length - 3
    for i in range(target_length):
        if i < len(text):
            result = result + text[i]
    return result + "..." 