{
    "files.exclude": {
        "**/.env": true,
        "**/.env.example": true,
        "**/.hintrc": true,
        "**/.pylintrc": true,

        "**/.git": true,
        "**/.github": true,
        "**/.gitignore": true,

        "**/.cache": true,
        "**/__pycache__": true,
        "**/build": true,
        "**/*.egg-info": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/uv.lock": true,
        "**/.venv": true,

        "**/.dana": true,
        "**/.poet": true,
        "**/.qodo": true,
        "**/tmp": true,
        "**/-bin": true,
        "**/docs/-.ai-only": true,
        "**/docs/-.archive": true,
        "**/docs/-internal": true,
        "**/docs/-javascripts": true,
        "**/docs/-stylesheets": true,
        "**/docs/-images": true,

        "**/-pyproject.toml": true,
        "**/-Makefile": true,
        "**/mkdocs.yml": true,
        "**/pytest.ini": true,
        "**/.cursor": true,
        "**/.cursor.example": true,
        "**/.cursorrules": true,
        "**/.cursorrules.bak": true,
        "**/.-markdownlint.yaml": true,
        "**/.pre-commit-config.yaml": true,
        "**/.python-version": true,
        "**/.claude": true,
        "**/CLAUDE.md": true,
        "**/CLAUDE.md.example": true,
        "**/CVS": true,

        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },

    "python.analysis.typeCheckingMode": "strict",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUndefinedVariable": "warning",
        "reportMissingImports": "warning",
        "reportGeneralTypeIssues": "warning"
    },
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.ignore": [
        "**/dana_grammar_embedded.py"
    ],

    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff",

    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },

    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.fixAll.ruff": "explicit",
            "source.organizeImports.ruff": "explicit"
        }
    },

    "pylint.enabled": false,
    "flake8.enabled": false,
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.fixAll": true,
    "ruff.lint.enable": true,
    "ruff.format.enable": true,
    
    // Ensure ruff errors show in Problems panel and file explorer
    "problems.decorations.enabled": true,
    "problems.showCurrentInStatus": true,
    "explorer.decorations.badges": true,
    "explorer.decorations.colors": true,

    "[dana]": {
        "editor.formatOnSave": false
    },
    "makefile.configureOnOpen": false
}
