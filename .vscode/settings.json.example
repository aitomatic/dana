{
    "files.exclude": {
        "**/.env": true,
        "**/.env.example": true,
	"**/.hintrc": true,
	"**/.pylintrc": true,

        "**/.git": true,
        "**/.github": true,
        "**/.gitignore": true,

        "**/.cache": true,
        "**/__pycache__": true,
        "**/build": true,
        "**/*.egg-info": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/uv.lock": true,
        "**/.venv": true,

        "**/.dana": true,
        "**/.poet": true,
        "**/.qodo": true,
        "**/tmp": true,
        "**/-bin": true,
        "**/docs/-.ai-only": true,
        "**/docs/-.archive": true,
        "**/docs/-internal": true,
        "**/docs/-javascripts": true,
        "**/docs/-stylesheets": true,
        "**/docs/-images": true,

        "**/-pyproject.toml": true,
        "**/-Makefile": true,
        "**/mkdocs.yml": true,
        "**/pytest.ini": true,
        "**/.cursor": true,
        "**/.cursorrules": true,
        "**/.cursorrules.bak": true,
        "**/.-markdownlint.yaml": true,
        "**/.pre-commit-config.yaml": true,
        "**/.python-version": true,
        "**/.claude": true,
        "**/CVS": true,

        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },

    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.extraPaths": ["./opendxa"],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUndefinedVariable": "none",
        "reportMissingImports": "none",
        "reportGeneralTypeIssues": "none"
    },
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.ignore": [
        "**/dana_grammar_embedded.py"
    ],

    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff",

    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },

    "pylint.enabled": false,
    "flake8.enabled": false,
    "ruff.enable": true,

    "[dana]": {
        "editor.formatOnSave": false
    }
}
