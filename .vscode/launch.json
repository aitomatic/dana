{
  "version": "0.2.0",

  "inputs": [
    {
      "id": "danaArgs",
      "description": "Enter Dana arguments (e.g., 'input1=... input2=...'):",
      "default": "",
      "type": "promptString"
    }
  ],

  "configurations": [
    {
      "name": "Run Dana",
      "type": "debugpy",
      "request": "launch",
      "module": "dana.core.cli.dana2",
      "args": ["${file}", "${input:danaArgs}"],
      "cwd": "${fileDirname}",
      "console": "integratedTerminal"
    }
  ]
}
