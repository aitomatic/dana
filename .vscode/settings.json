{
    // === Explorer Settings ===
    // Show hidden files and folders
    "files.exclude": {
        // Environment-related
        "**/.env": true,

        // Git-related
        "**/.git": true,

        // Python-related
        "**/__pycache__": true,
        "**/build": true,
        "**/*.egg-info": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/.ruff_cache": true,
        "**/uv.lock": true,
        "**/.venv": true,

        "**/.dana": true,
        "**/.poet": true,
        "**/.qodo": true,
        "**/tmp": true,
        "**/bin": true,
        "**/docs/.ai-only": true,
        "**/docs/.archive": true,
        "**/docs/internal": true,
        "**/docs/javascripts": true,
        "**/docs/stylesheets": true,
        "**/docs/images": true,

        "**/-pyproject.toml": true,
        "**/-Makefile": true,
        "**/mkdocs.yml": true,
        "**/pytest.ini": true,
        "**/.cursorrules": true,
        "**/.-markdownlint.yaml": true,
        "**/.pre-commit-config.yaml": true,
        "**/.python-version": true,
        "**/.gitignore": true,
        "**/.github": true,
        "**/.claude": true,
        "**/CVS": true,

        // misc/other
        "**/.DS_Store": true,
        "**/Thumbs.db": true
    },

    // === Python Analysis Settings ===
    // Controls type checking and import behavior for Python code
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.autoImportCompletions": true,
    "python.analysis.extraPaths": ["./opendxa"],
    "python.analysis.diagnosticSeverityOverrides": {
        "reportUndefinedVariable": "none",
        "reportMissingImports": "none",
        "reportGeneralTypeIssues": "none"
    },
    "python.analysis.diagnosticMode": "workspace",
    "python.analysis.ignore": [
        "**/dana_grammar_embedded.py"
    ],

    // === Editor Formatting ===
    // Configures automatic code formatting with Ruff
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.defaultFoldingRangeProvider": "charliermarsh.ruff",

    // === Code Actions ===
    // Sets up Ruff for linting and import organization when explicitly triggered
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit",
        "source.organizeImports.ruff": "explicit"
    },

    // === Linters Configuration ===
    // Enables multiple Python linting tools for code quality
    "pylint.enabled": false,
    "flake8.enabled": false,
    "ruff.enable": true,

    // === Language-Specific Overrides ===
    // Disables auto-formatting for .dana files
    "[dana]": {
        "editor.formatOnSave": false
    }
}
