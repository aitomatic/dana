sensor = use("mcp", url="https://demo.mcp.aitomatic.com/sensors")
kb = use("rag", sources=["knowledge_base/vacuum_system_agent.json"])

agent VacuumSystemAgent:
    name : str = "Vacuum System Agent"
    description : str = "Expert agent in Vacuum System Troubleshooting"
    resources : list = [sensor, kb]


def solve(vacuum_system_agent : VacuumSystemAgent, problem : str) -> str:
    answer : str = reason(f"Your goal is to solve this problem {problem}. Think step by step until you are sure with the answer.", resources=vacuum_system_agent.resources)
    return answer


agent1 = VacuumSystemAgent()

print(agent1.agent_card)