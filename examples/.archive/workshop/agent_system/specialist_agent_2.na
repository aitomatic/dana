"""Specialist Agent #2."""
from datetime.py import date

# Agent resources
search_service = use("mcp", url="https://demo.mcp.aitomatic.com/websearch_v2")

# Agent Card declaration
agent WebSearcherAgent:
    name : str = "Web Searcher"
    description : str = "Agent answering questions through searching the web"
    resources : list = [search_service]

# Agent's problem solver
def solve(web_agent : WebSearcherAgent, problem : str):
    return reason(f"{problem} Be aware that today is {date.today()}", resources=web_agent.resources)

# quick test:
web_agent = WebSearcherAgent()
print(web_agent.solve("Find 10 notable cultural events going on in Tokyo this week"))
#OR
print(solve(web_agent, "Find 10 notable cultural events going on in Tokyo this week"))
