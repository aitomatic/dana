"""Financial-Analysis Data Types."""


from typing.py import Optional


__all__ = [
    'FinDoc',
    'CurrAndPrevNums',
]


# TODO: have path outside of this struct, in outer context
struct FinDoc:
    """Financial Document."""

    company: str
    period: str
    currency: str = 'dollars'
    path: Optional[str] = None


struct CurrAndPrevNums:
    """Current and previous numerical values of a financial metric."""

    curr: float
    prev: float
    unit_of_measurement: str
